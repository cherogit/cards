* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	text-size-adjust: none;
}

html {
	font-size: 10px;
}

body {
	display: flex;
	flex-direction: column;
	min-height: 100vh;
	margin: 0;
	font-size: 16px;
}

input {
	border: none;
	outline: none;
	border-radius: 0;
}

input:focus {
	outline: none;
}

input::placeholder {
	font-family: inherit;
	color: inherit;
}

button {
	border: none;
	outline: none;
	border-radius: 0;
	cursor: pointer;
}

button:focus {
	outline: none;
}

textarea {
	border: none;
	outline: none;
	border-radius: 0;
	overflow: auto;
}

textarea:focus {
	outline: none;
}

textarea::placeholder {
	font-family: inherit;
	color: inherit;
}

a {
	font-size: inherit;
	color: inherit;
	text-decoration: none;
}

a:focus,
a:visited {
	outline: none;
}

ul, ol {
	list-style: none;
}

.container {
	max-width: 1110px;
	width: 100%;
	margin: 0 auto;
	padding: 0 10px;
}

.main {
	position: relative;
	display: block;
	flex: 1 0 auto;
	z-index: 3;
}

.card {
	width: calc(33.3333% - 20px);
	margin: 0 10px;
	background: #f5f6f7;
	border: 4px solid transparent;
	border-radius: 5px;
	transition: 300ms;
}

.card:hover {
	border-color: #aa9b77;
}

.card__header,
.card__info {
	display: flex;
	justify-content: space-between;
	align-items: center;
	align-content: center;
	padding: 20px;
}

.card__size {
	text-transform: uppercase;
	font: 16px/22px 'Quicksand-bold', sans-serif;
	color: #424242;
}

.card__pict {
	max-width: 100%;
	height: 235px;
	margin: 0 auto;
	text-align: center;
}

.card__pict img {
	display: inline-block;
	max-width: 100%;
	max-height: 100%;
}

.card__info {
	text-transform: uppercase;
	font: 18px/22px 'Quicksand-bold', sans-serif;
}

.card__name {
	color: #aa9b77;
}

.card__price {
	color: #424242;
}

.color {
	display: inline-block;
	width: 22px;
	height: 22px;
	border-radius: 50%;
}

.color:not(:last-child) {
	margin-right: 5px;
}

.filter {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	margin-bottom: 80px;
	padding: 45px 0;
	background: #f5f6f7;
}

.checkbox {
	position: relative;
	display: inline-block;
	cursor: pointer;
}

.checkbox:not(:last-of-type) {
	margin-right: 40px;
}

.checkbox__text {
	position: relative;
	padding-left: 45px;
	text-transform: uppercase;
	font: 18px/30px 'Quicksand-bold', sans-serif;
	color: #333333;
	transition: 300ms;
}

.checkbox__text::before {
	content: '';
	position: absolute;
	top: 50%;
	left: 0;
	transform: translateY(-50%);
	display: block;
	width: 21px;
	height: 21px;
	border: 2px solid #cccccc;
	border-radius: 3px;
	transition: 300ms;
}

.checkbox__text::after {
	content: '\2713';
	position: absolute;
	bottom: 3px;
	left: 3px;
	display: block;
	width: 25px;
	height: 25px;
	font-size 30px
	font-weight bold
	opacity: 0;
	visibility: hidden;
	transition: 300ms;
}

.checkbox__field {
	position: absolute;
	opacity: 0;
}

.checkbox input[type='checkbox']:checked + .checkbox__text::before {
	border-color: #aa9b77;
}

.checkbox input[type='checkbox']:checked + .checkbox__text::after {
	opacity: 1;
	visibility: visible;
}

.catalog {
	margin-bottom 50px
	border 1px solid #000
}

.catalog__category {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	width: 100%;
	margin-bottom: 45px;
}

.catalog__category::after {
	content: '';
	display: block;
	flex-grow: 1;
	height: 2px;
	background: #cccccc;
}

.catalog__category-name {
	display: inline-block;
	min-width: 65px;
	margin-right: 30px;
	text-transform: uppercase;
	font: 20px/30px 'Quicksand-bold', sans-serif;
	color: #424242;
}

.catalog__list {
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
}

.navigate {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
}

.navigate__counter {
	font: 16px/20px 'Quicksand-regular', sans-serif;
	color: #aa9b77;
}

.navigate__controls {
	font-size: 0;
}

.navigate__prev,
.navigate__next {
	display: inline-block;
	padding: 5px;
	box-sizing: content-box;
	background: #fff;
	font: 20px/30px 'Quicksand-bold', sans-serif;
	color: #aa9b77;
	cursor: pointer;
	transition: 300ms;
}

.navigate__prev:hover,
.navigate__next:hover {
	color: #000;
}





